/* greatest number */


#include <stdio.h>
#include <stdlib.h>

int main()
{

    float a,b,c;
    printf("\nEnter the value of 3 numbers:\n");
    scanf("%f %f %f",&a,&b,&c);
    if(a>b&&a>c)
        printf("a is the greatest number");
    else if(c>a&&c>b)
        printf("c is the greatest number");
    else
        printf("b is the greatest number");
    return 0;
}
